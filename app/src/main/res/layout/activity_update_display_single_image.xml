<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <EditText
        android:id="@+id/editTextTitleSinglePlace"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="15dp"
        android:layout_above="@+id/textViewDescriptionPlace"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editTextDescriptionSinglePlace"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="15dp"
        android:layout_above="@+id/textViewDescriptionPlace"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageViewSinglePlaceUprava"
        android:layout_width="match_parent"
        android:layout_height="369dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/common_full_open_on_phone" />

    <Button
        android:id="@+id/buttonSinglePlaceUlozit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnUlozitZmeny" />

</LinearLayout>